<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentRandomizer.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Margin="20"
            HorizontalOptions="Center"
            Spacing="20">
            <Label HorizontalTextAlignment="Center">Welcome to the Student Randomizer!</Label>
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Label>Today's lucky number:</Label>
                <Label x:Name="LuckyNumber" />
            </HorizontalStackLayout>
            <VerticalStackLayout
                MaximumWidthRequest="300"
                MinimumWidthRequest="150"
                Spacing="20"
                VerticalOptions="Center">
                <Button Clicked="Button_Clicked" Text="Roll a student!" />
                <Button Clicked="Button_Clicked_1" Text="Manage students list" />
                <Button Clicked="Button_Clicked_2" Text="Manage classes list" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
