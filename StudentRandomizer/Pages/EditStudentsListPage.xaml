<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentRandomizer.Pages.EditStudentsListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:StudentRandomizer.Views"
    xmlns:vm="clr-namespace:StudentRandomizer.ViewModels"
    Title="EditStudentsListPage">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Models}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <v:StudentView
                        StudentClassName="{Binding Path=ClassId}"
                        StudentFirstName="{Binding Path=FirstName}"
                        StudentIsPresent="{Binding Path=IsPresent}"
                        StudentLastName="{Binding Path=LastName}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>