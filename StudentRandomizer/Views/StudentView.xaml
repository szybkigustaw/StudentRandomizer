<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="StudentRandomizer.Views.StudentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:v="clr-namespace:StudentRandomizer.Views">
    <HorizontalStackLayout
        Padding="20"
        HorizontalOptions="Fill"
        Spacing="20"
        VerticalOptions="Center">
        <HorizontalStackLayout Spacing="10">
            <Label Text="Index Number" />
            <Label Text="{Binding IndexNumber}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="First Name" />
            <Label Text="{Binding FirstName}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Last Name" />
            <Label Text="{Binding LastName}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Class" />
            <Label Text="{Binding ClassName}" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="Is present?" />
            <CheckBox IsChecked="{Binding IsPresent}" />
        </HorizontalStackLayout>
        <Button Clicked="Button_Clicked" Text="Edit" />
    </HorizontalStackLayout>
</ContentView>
