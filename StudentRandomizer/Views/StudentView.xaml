<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="StudentRandomizer.Views.StudentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentRandomizer.Views">
    <ContentView.BindingContext>
        <local:StudentView />
    </ContentView.BindingContext>
    <HorizontalStackLayout Padding="20" Spacing="20">
        <Label x:Name="studentName" Text="{Binding StudentFullName}" />
        <Label x:Name="className" Text="{Binding StudentClassName}" />
        <HorizontalStackLayout Spacing="10">
            <CheckBox IsChecked="{Binding StudentIsPresent}" />
        </HorizontalStackLayout>
    </HorizontalStackLayout>
</ContentView>
