<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentRandomizer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentRandomizer.Pages"
    xmlns:popups="clr-namespace:StudentRandomizer.Popups"
    Title="StudentRandomizer"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Select a student"
        ContentTemplate="{DataTemplate local:RandomizerPage}"
        Route="RandomizerPage" />
    <ShellContent
        Title="Students list"
        ContentTemplate="{DataTemplate local:EditStudentsListPage}"
        Route="StudentsListPage" />
    <ShellContent
        Title="Classes list"
        ContentTemplate="{DataTemplate local:EditClassesListPage}"
        Route="ClassesListPage" />

    <ShellContent
        Title="Edit Class"
        ContentTemplate="{DataTemplate local:EditClassPopup}"
        Route="EditClass" />

    <ShellContent
        Title="Edit Student"
        ContentTemplate="{DataTemplate local:EditStudentPopup}"
        Route="EditStudent" />

</Shell>
